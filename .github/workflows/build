name: Build and Deploy to GitHub Pages

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    # Чекаут репозитория
    - name: Checkout code
      uses: actions/checkout@v4

    # Генерация файла api_constants.js с API-ключом
    - name: Generate api_constants.js
      run: |
        echo "export const BITRIX_TOKEN = '${{ secrets.BITRIX_TOKEN }}';" > ./src/api_constants.js

    # Установка Node.js
    - name: Setup Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    # Установка зависимостей
    - name: Install dependencies
      run: npm install

    # Сборка проекта
    - name: Build project
      run: npm run build

    # Деплой на GitHub Pages
    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./build
